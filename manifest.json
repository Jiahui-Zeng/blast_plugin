{
    "manifest_version": 2,
    "name": "Tip Plugin",
    "version": "1.0",
    "description": "Enable tipping to content creators with Ethereum.",
    "permissions": ["activeTab"],
    
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["script.js"]
      }
    ],
    "browser_action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  }
  